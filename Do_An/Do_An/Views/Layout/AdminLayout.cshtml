<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    @*Chèn file css và javascript*@
    <link href="~/Content/Template/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Template/css/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/Template/css/style.css" rel="stylesheet" />
    <link href="~/Content/Template/css/style-responsive.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/aa1192215e.js" crossorigin="anonymous"></script>
    @*<link href="~/Content/NguoiDungCssLayout/screen.css" rel="stylesheet" />
    <link href="~/Content/NguoiDungCssLayout/NguoiDungCss.css" rel="stylesheet" />*@
    <link href="~/Content/font awesome/fontawesome.css" rel="stylesheet" />
    <link href="~/Content/font awesome/fontawesome.min.css" rel="stylesheet" />
</head>
<body>
    <!-- start: Header -->
    <div class="navbar">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".top-nav.nav-collapse,.sidebar-nav.nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="@Url.Action("Index","Home")"><span>Trang chủ</span></a>

                <!-- start: Header Menu -->
                @using Do_An.Models
                @*Tạo div đăng ký đăng nhập*@
                @{
                    KhachHang khachHang = Session["TaiKhoan"] as KhachHang;
                    <div class="DangKyDangNhap">
                        <span>Chào, @khachHang.HoTen </span>
                        <i class="fa-solid fa-user"></i>
                        @Html.ActionLink("Đăng xuất", "DangXuat", "NguoiDung", null, htmlAttributes: new { @class = "DangXuat" })
                        <i class="fa-solid fa-share-from-square"></i>
                    </div>
                }
            </div>
            <style>
                .container-fluid {
                    display: flex;
                    align-items: center;
                    justify-content: space-between;
                    padding: 10px;
                }

                .btn-navbar {
                    display: none;
                }

                .brand {
                    font-size: 20px;
                    color: #333;
                    text-decoration: none;
                }

                .DangKyDangNhap {
                    display: flex;
                    align-items: center;
                    font-size: 16px;
                    background-color: #000;
                    color: #fff;
                    padding: 5px 10px;
                    margin-left: auto;
                }

                    .DangKyDangNhap span {
                        margin-right: 10px;
                    }

                .fa-solid {
                    margin: 0 5px;
                }

                .DangXuat {
                    color: #007bff;
                    text-decoration: none;
                }

                    .DangXuat:hover {
                        text-decoration: underline;
                    }
            </style>


        </div>
    </div>

    <!-- start: Header -->

    <div class="container-fluid-full">
        <div class="row-fluid">

            <!-- start: Main Menu -->
            <div id="sidebar-left" class="span2">
                <div class="nav-collapse sidebar-nav">
                    <ul class="nav nav-tabs nav-stacked main-menu">
                        <li><a href="@Url.Action("Index","QuanLySanPham")"><i class="icon-bar-chart"></i><span class="hidden-tablet"> Quản lí sản phẩm</span></a></li>
                        <li><a href="@Url.Action("Index","QuanLyNguoiDung")"><i class="icon-envelope"></i><span class="hidden-tablet"> Quản lí người dùng</span></a></li>
                    </ul>
                </div>
            </div>
            <!-- end: Main Menu -->

            <noscript>
                <div class="alert alert-block span10">
                    <h4 class="alert-heading">Warning!</h4>
                    <p>You need to have <a href="http://en.wikipedia.org/wiki/JavaScript" target="_blank">JavaScript</a> enabled to use this site.</p>
                </div>
            </noscript>

            <!-- start: Content -->
            <div id="content" class="span10">

                @RenderBody()

            </div><!--/.fluid-container-->
            @RenderSection("Scripts", required: false)
            <!-- end: Content -->
        </div><!--/#content.span10-->
    </div><!--/fluid-row-->

    <div class="modal hide fade" id="myModal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h3>Settings</h3>
        </div>
        <div class="modal-body">
            <p>Here settings can be configured...</p>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Close</a>
            <a href="#" class="btn btn-primary">Save changes</a>
        </div>
    </div>

    <div class="clearfix"></div>

    <footer id="footer" style="
        
        width: 2000px;margin-bottom:-80px;">

        <div class="contact-info">
            <h3>Thông tin liên hệ</h3>
            <p>Địa chỉ: 123 Đường ABC, Thành phố Hồ Chí Minh</p>
            <p>Email: toidxbp02@example.com</p>
            <p>Số điện thoại: 0123456789</p>
        </div>
        <div class="copy-right">
            <p>&copy; 2023 Tiệm sách của Urine. Bảo lưu mọi quyền.</p>
        </div>
    </footer>

    <!-- start: JavaScript-->
    <script src="~/Content/Template/js/jquery-1.9.1.min.js"></script>

    <script src="~/Content/Template/js/jquery-migrate-1.0.0.min.js"></script>

    <script src="~/Content/Template/js/jquery-ui-1.10.0.custom.min.js"></script>

    <script src="~/Content/Template/js/jquery.ui.touch-punch.js"></script>

    <script src="~/Content/Template/js/modernizr.js"></script>

    <script src="~/Content/Template/js/bootstrap.min.js"></script>

    <script src="~/Content/Template/js/jquery.cookie.js"></script>

    <script src='~/Content/Template/js/fullcalendar.min.js'></script>

    <script src='~/Content/Template/js/jquery.dataTables.min.js'></script>

    <script src="~/Content/Template/js/excanvas.js"></script>
    <script src="~/Content/Template/js/jquery.flot.js"></script>
    <script src="~/Content/Template/js/jquery.flot.pie.js"></script>
    <script src="~/Content/Template/js/jquery.flot.stack.js"></script>
    <script src="~/Content/Template/js/jquery.flot.resize.min.js"></script>

    <script src="~/Content/Template/js/jquery.chosen.min.js"></script>

    <script src="~/Content/Template/js/jquery.uniform.min.js"></script>

    <script src="~/Content/Template/js/jquery.cleditor.min.js"></script>

    <script src="~/Content/Template/js/jquery.noty.js"></script>

    <script src="~/Content/Template/js/jquery.elfinder.min.js"></script>

    <script src="~/Content/Template/js/jquery.raty.min.js"></script>

    <script src="~/Content/Template/js/jquery.iphone.toggle.js"></script>

    <script src="~/Content/Template/js/jquery.uploadify-3.1.min.js"></script>

    <script src="~/Content/Template/js/jquery.gritter.min.js"></script>

    <script src="~/Content/Template/js/jquery.imagesloaded.js"></script>

    <script src="~/Content/Template/js/jquery.masonry.min.js"></script>

    <script src="~/Content/Template/js/jquery.knob.modified.js"></script>

    <script src="~/Content/Template/js/jquery.sparkline.min.js"></script>

    <script src="~/Content/Template/js/counter.js"></script>

    <script src="~/Content/Template/js/retina.js"></script>

    <script src="~/Content/Template/js/custom.js"></script>
    <!-- end: JavaScript-->

</body>
</html>
