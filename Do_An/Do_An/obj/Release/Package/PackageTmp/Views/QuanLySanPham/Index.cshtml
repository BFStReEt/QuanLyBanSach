@using Do_An.Models;
@using PagedList.Mvc;
@model  PagedList.PagedList<Do_An.Models.Sach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h2>Quản lí sản phẩm</h2>

<p>
    @Html.ActionLink("Thêm sách", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().MaSach)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TenSach)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().GiaBan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MoTa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().AnhBia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().NgayCapNhat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().SoLuongTon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MaNXB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().MaChuDe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Moi)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaSach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenSach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaBan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                <img src="@Url.Content("~/HinhAnhSP/"+item.AnhBia)" width="200" height="200" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayCapNhat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuongTon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhaXuatBan.TenNXB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChuDe.TenChuDe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Moi)
            </td>
            <td>
                <div class="btn-group" role="group">
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaSach }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "Xoa", new {@MaSach = item.MaSach }, new { @class = "btn btn-danger" })
                </div>
            </td>


        </tr>
    }

</table>

 &nbsp;&nbsp;&nbsp;&nbsp;Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount

<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
<style>
    .MenuTrang {
        text-align: center;
        margin-top: 20px;
    }

        .MenuTrang .pagination {
            display: inline-block;
            padding-left: 0;
            margin: 0;
            border-radius: 4px;
        }

            .MenuTrang .pagination li {
                display: inline;
                margin-right: 5px;
            }

                .MenuTrang .pagination li a,
                .MenuTrang .pagination li span {
                    position: relative;
                    float: left;
                    padding: 6px 12px;
                    line-height: 1.42857143;
                    text-decoration: none;
                    color: #428bca;
                    background-color: #fff;
                    border: 1px solid #ddd;
                }

            .MenuTrang .pagination .active span {
                background-color: #428bca;
                color: #fff;
                border-color: #428bca;
            }

            .MenuTrang .pagination .disabled span,
            .MenuTrang .pagination .disabled span:hover,
            .MenuTrang .pagination .disabled span:focus {
                background-color: #fff;
                color: #999;
                cursor: not-allowed;
            }
</style>
